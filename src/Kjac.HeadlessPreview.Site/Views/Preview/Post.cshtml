@using Kjac.HeadlessPreview.Site.Models;
@model DeliveryApiContent<PostProperties>

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en-US">
<head>
    <title>@Model.Name</title>
    <script src="/scripts/umb.preview.js"></script>
    <style>
        @@media screen and (min-width: 1200px) {
            body {
                padding: 50px 100px;
            }
            code {
                white-space: pre;
            }
        }
    </style>
</head>
<body>
<div>
    <h1>@Model.Name [@Model.ContentType]</h1>

    <fieldset umb-preview-edit="author">
        <legend>Author</legend>
        @Model.Properties.Author.Name
    </fieldset>

    <fieldset umb-preview-edit="coverImage">
        <legend>Cover Image</legend>
        <img src="@Model.Properties.CoverImage[0].Url" height="200px" />
    </fieldset>

    <fieldset umb-preview-edit="excerpt">
        <legend>Excerpt</legend>
        @Model.Properties.Excerpt
    </fieldset>

    <fieldset umb-preview-edit="content">
        <legend>Content</legend>
        @Html.Raw(Model.Properties.Content.Markup)
    </fieldset>

    <fieldset umb-preview-edit="tags">
        <legend>Tags</legend>
        @string.Join(", ", Model.Properties.Tags)
    </fieldset>
</div>
</body>
</html>